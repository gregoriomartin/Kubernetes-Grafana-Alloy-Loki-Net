{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "OpenTelemetry": {
    "ServiceName": "logging-app",
    "ServiceVersion": "1.0.0",
    "Endpoint": "http://alloy.observability.svc.cluster.local:4317"
  }
}